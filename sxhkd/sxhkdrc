#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + @space
  rofi -modi drun,run -show drun -no-history -matching prefix -drun-match-fields name -no-tokenize 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

super + shift + r
  bspc wm -r

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#


super + {h,j,k,l}
  dir={west,south,north,east}; \
  bspc node "$dir.local" -f \ 
    || bspc monitor "$dir" -f

super + shift + {h,j,k,l}
    dir={west,south,north,east}; \
    bspc node -s "$dir.local" --follow \
        || bspc node -m "$dir" --follow


# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + Tab
	bspc desktop -f last

super + grave 
  betterlockscreen -l


#focus or send to the given desktop

super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} {1,2,3,4,5,6,7,8,9}


{% if "laptop" in profiles %}

super + Delete
  betterlockscreen -l dimblur --display 1

XF86AudioRaiseVolume
  pactl set-sink-volume 0 +2%
XF86AudioLowerVolume
  pactl set-sink-volume 0 -2%
XF86AudioMute
  pactl set-sink-mute 0 toggle
XF86AudioPrev
  $HOME/scripts/sp prev
XF86AudioNext
  $HOME/scripts/sp next
XF86AudioPlay
  $HOME/scripts/sp play

XF86MonBrightnessUp
  brightnessctl set +2%

XF86MonBrightnessDown
  brightnessctl set 2%-

{% else %}
super + Scroll_Lock
  betterlockscreen -l dimblur --display 1

super + Delete
  mpc volume -1

super + End 
  mpc toggle

super + Next 
  mpc volume +1

# super + Insert 
#   mpc next 
#
# super + Prior 
#   mpc prev 

super + Home
  mpc single

XF86AudioPlay
  mpc toggle

XF86AudioPrev
  mpc next

XF86AudioNext
  mpc prev

XF86AudioRewind
  mpc single

XF86AudioRaiseVolume
  mpc volume +1

XF86AudioLowerVolume
  mpc volume -1

{% endif %}

super + shift + s
  flameshot gui

super + b
  {{ browser.cmd }}

super + c 
  clipster -sc

super + period 
  rofi -modi emoji -show emoji -kb-custom-1 Ctrl+C

super + e
  pcmanfm 

{% if "laptop" in profiles %}

{% if "displaylink2" in profiles %}

super + g
  bombadil link -p laptop displaylink2

{% elif "displaylink3" in profiles %}

super + g
  bombadil link -p laptop displaylink3

{% else %}

super + g
  bombadil link -p laptop

{% endif %}

{% else %}

super + g
  bombadil link -p desktop

{% endif %}
